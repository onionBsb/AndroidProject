<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#008577"
        android:text="ConstraintLayoutTest"
        android:textColor="#fff"
        android:textSize="25dp"
        android:gravity="center_vertical" />

    <EditText
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:hint="Input"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#BBBB99"
        android:text="0.0"
        android:textSize="30dp"
        android:gravity="right"
        app:layout_constraintTop_toBottomOf="@+id/input" />


    <TextView
        android:id="@+id/seven"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="#D6D7D7"
        android:textColor="#000"
        android:text="7"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/result" />

    <TextView
        android:id="@+id/eight"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:background="#D6D7D7"
        android:gravity="center"
        android:text="8"
        android:textColor="#000"
        android:textSize="30dp"
        app:layout_constraintLeft_toRightOf="@+id/seven"
        app:layout_constraintTop_toBottomOf="@+id/result" />

    <TextView
        android:id="@+id/nine"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:background="#D6D7D7"
        android:gravity="center"
        android:text="9"
        android:textColor="#000"
        android:textSize="30dp"
        app:layout_constraintLeft_toRightOf="@+id/eight"
        app:layout_constraintTop_toBottomOf="@+id/result" />

    <TextView
        android:id="@+id/except"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:background="#D6D7D7"
        android:gravity="center"
        android:text="รท"
        android:textColor="#000"
        android:textSize="30dp"
        app:layout_constraintLeft_toRightOf="@+id/nine"
        app:layout_constraintTop_toBottomOf="@+id/result" />

    <TextView
        android:id="@+id/four"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="#D6D7D7"
        android:textColor="#000"
        android:text="4"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/seven" />

    <TextView
        android:id="@+id/five"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:background="#D6D7D7"
        android:gravity="center"
        android:text="5"
        android:textColor="#000"
        android:textSize="30dp"
        app:layout_constraintLeft_toRightOf="@+id/four"
        app:layout_constraintTop_toBottomOf="@+id/eight" />

    <TextView
        android:id="@+id/six"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:background="#D6D7D7"
        android:gravity="center"
        android:text="6"
        android:textColor="#000"
        android:textSize="30dp"
        app:layout_constraintLeft_toRightOf="@+id/five"
        app:layout_constraintTop_toBottomOf="@+id/nine" />

    <TextView
        android:id="@+id/multiply"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:background="#D6D7D7"
        android:gravity="center"
        android:text="ร"
        android:textColor="#000"
        android:textSize="30dp"
        app:layout_constraintLeft_toRightOf="@+id/six"
        app:layout_constraintTop_toBottomOf="@+id/except" />

    <TextView
        android:id="@+id/one"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="#D6D7D7"
        android:textColor="#000"
        android:text="1"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/four" />

    <TextView
        android:id="@+id/two"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:background="#D6D7D7"
        android:gravity="center"
        android:text="2"
        android:textColor="#000"
        android:textSize="30dp"
        app:layout_constraintLeft_toRightOf="@+id/one"
        app:layout_constraintTop_toBottomOf="@+id/five" />

    <TextView
        android:id="@+id/three"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:background="#D6D7D7"
        android:gravity="center"
        android:text="3"
        android:textColor="#000"
        android:textSize="30dp"
        app:layout_constraintLeft_toRightOf="@+id/two"
        app:layout_constraintTop_toBottomOf="@+id/six" />

    <TextView
        android:id="@+id/add"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:background="#D6D7D7"
        android:gravity="center"
        android:text="+"
        android:textColor="#000"
        android:textSize="30dp"
        app:layout_constraintLeft_toRightOf="@+id/three"
        app:layout_constraintTop_toBottomOf="@+id/multiply" />

    <TextView
        android:id="@+id/dot"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="#D6D7D7"
        android:textColor="#000"
        android:text="."
        android:textSize="30dp"
        android:gravity="center"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/one" />

    <TextView
        android:id="@+id/zero"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:background="#D6D7D7"
        android:gravity="center"
        android:text="0"
        android:textColor="#000"
        android:textSize="30dp"
        app:layout_constraintLeft_toRightOf="@+id/dot"
        app:layout_constraintTop_toBottomOf="@+id/two" />

    <TextView
        android:id="@+id/same"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:background="#D6D7D7"
        android:gravity="center"
        android:text="="
        android:textColor="#000"
        android:textSize="30dp"
        app:layout_constraintLeft_toRightOf="@+id/zero"
        app:layout_constraintTop_toBottomOf="@+id/three" />

    <TextView
        android:id="@+id/reduce"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:background="#D6D7D7"
        android:gravity="center"
        android:text="-"
        android:textColor="#000"
        android:textSize="30dp"
        app:layout_constraintLeft_toRightOf="@+id/same"
        app:layout_constraintTop_toBottomOf="@+id/add" />



</androidx.constraintlayout.widget.ConstraintLayout>