<?xml version="1.0" encoding="utf-8"?>
<menu xmlns:android="http://schemas.android.com/apk/res/android">
    <!--  This is our one standard application action (creating a new note). -->
    <item android:id="@+id/menu_search"
          android:icon="@drawable/search"
          android:title="@string/menu_search"
          android:showAsAction="always" />
    <!--  If there is currently data in the clipboard, this adds a PASTE menu item to the menu
          so that the user can paste in the data.. -->
    <item android:id="@+id/menu_add"
        android:icon="@drawable/ic_menu_compose"
        android:title="@string/menu_add"
        android:alphabeticShortcut='a'
        android:showAsAction="always" />
    <item android:id="@+id/menu_sort"
        android:icon="@drawable/ic_menu_compose"
        android:title="Sort">
        <menu>
            <item android:id="@+id/menu_sort_desc"
                android:title="Time DESC"/>
            <item android:id="@+id/menu_sort_asc"
                android:title="Time ASC"/>
            <item android:id="@+id/menu_sort_titledesc"
                android:title="Title DESC"/>
            <item android:id="@+id/menu_sort_titleasc"
                android:title="Title ASC"/>
        </menu>
    </item>
    <item android:id="@+id/menu_size"
        android:title="Size">
        <menu>
            <item android:id="@+id/menu_size_big"
                android:title="Big"/>
            <item android:id="@+id/menu_size_default"
                android:title="Default"/>
            <item android:id="@+id/menu_size_small"
                android:title="Small"/>

        </menu>
    </item>
    <item android:id="@+id/menu_theme"
        android:title="Theme">
        <menu>
            <item android:id="@+id/menu_size_black"
                android:title="Black"/>
            <item android:id="@+id/menu_size_white"
                android:title="White"/>

        </menu>
    </item>
    <item android:id="@+id/menu_paste"
          android:icon="@drawable/ic_menu_compose"
          android:title="@string/menu_paste"
          android:alphabeticShortcut='p' />

    <item android:id="@+id/menu_reset"
        android:title="Reset" />
</menu>